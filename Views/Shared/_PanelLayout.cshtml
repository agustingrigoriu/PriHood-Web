<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <base href="/">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <title>Panel - @ViewData["Title"] - PriHood</title>
  <!-- Tell the browser to be responsive to screen width -->
  <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
  <!-- Bootstrap 3.3.6 -->
  <link rel="stylesheet" href="panel/bootstrap/css/bootstrap.min.css">
  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.5.0/css/font-awesome.min.css">
  <!-- Ionicons -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/ionicons/2.0.1/css/ionicons.min.css">
  <!-- Theme style -->
  <link rel="stylesheet" href="panel/css/AdminLTE.min.css">
  <link rel="stylesheet" href="panel/css/skins/skin-blue.min.css">
  <link rel="stylesheet" href="panel/css/panel.min.css">
</head>

<body class="hold-transition skin-blue sidebar-mini">
<div class="wrapper">

  <header class="main-header">
    <a asp-action="index" asp-controller="Panel" class="logo">
      <span class="logo-mini"><b>P</b>HD</span>
      <span class="logo-lg"><b>Pri</b>Hood</span>
    </a>

    <nav class="navbar navbar-static-top" role="navigation">
      <a href="#" class="sidebar-toggle" data-toggle="offcanvas" role="button">
        <span class="sr-only">Toggle navigation</span>
      </a>
      <div class="navbar-custom-menu">
        <ul class="nav navbar-nav">
          
          <li class="dropdown user user-menu">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <span>Pato Perez</span>
            </a>
            <ul class="dropdown-menu">
              <li class="user-body">
                <p>
                  micorre@nose.com
                </p>
              </li>
              <li class="user-footer">
                <div class="pull-left">
                  <a href="#" class="btn btn-default btn-flat">Perfil</a>
                </div>
                <div class="pull-right">
                  <a asp-controller="Home" class="btn btn-default btn-flat">Salir</a>
                </div>
              </li>
            </ul>
          </li>

        </ul>
      </div>
    </nav>
  </header>


  <aside class="main-sidebar">
    <section class="sidebar">

      <div class="user-panel">
        <!--
          Pueden poner una imagen asi!
          60x60

        <div class="pull-left image">
          <img src="panel/img/user2-160x160.jpg" class="img-circle" alt="User Image">
        </div>
        -->
        <div class="info info-no-image">
          <p>Pato Perez</p>
          <div>pato@micorreo.com</div>
        </div>
      </div>

      @Html.Partial("_Menu")
    </section>
  </aside>

  @RenderBody()

  <footer class="main-footer">
    <strong>PriHood &copy;</strong> 2017
  </footer>
</div>
<!-- ./wrapper -->


<script src="panel/plugins/jQuery/jquery-2.2.3.min.js"></script>
<script src="panel/bootstrap/js/bootstrap.min.js"></script>
<script src="panel/js/app.min.js"></script>

</body>
</html>
