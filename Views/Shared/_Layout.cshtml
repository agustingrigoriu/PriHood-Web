<!DOCTYPE html>

<html lang="es">
<head>

<meta charset="utf-8">
<title>PriHood - @ViewData["Title"]</title>
<meta name="description" content="PriHood - @ViewData["Title"]">

<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1.0, user-scalable=no">

<link rel="stylesheet" href="~/web/css/site.min.css" asp-append-version="true" />
<link rel="stylesheet" href="~/web/css/style.css" asp-append-version="true" />
<link rel="icon" href="favicon.png">
</head>

<body data-spy="scroll" data-target=".navMenuCollapse">
<!--navbar estática-->
<div id="wrap"> 
    <!-- NAVIGATION BEGIN -->
    <nav class="navbar navbar-fixed-top">
            <div class="container_fluid"> 
                <button class="navbar-toggle menu-collapse-btn collapsed" data-toggle="collapse" data-target=".navMenuCollapse"> <span class="icon-bar"></span> <span class="icon-bar"></span> <span class="icon-bar"></span> </button>
                <div class="collapse navbar-collapse navMenuCollapse">
                    <ul class="nav">
                        <!-- <li><a asp-controller="Home" asp-action="Index">Inicio</a> </li> -->
                        <li><a href="#caracteristicas">Caracteristicas</a></li>
                        <li><a asp-controller="Login" asp-action="Index">Iniciar Sesión</a></li>
                    </ul>
                </div>
            </div>
    </nav>
    <!-- NAVIGAION END -->
    
    <!-- INTRO BEGIN -->
    <header id="full-intro" class="intro-block bg-color-grad" >
        <div class="container">
            <div class="row">
                <div class="col-md-8 col-sm-12">
                    <img class="logo" src="web/images/logo.png" alt="PriHood Logo" height="100" />
                    <h1 class="slogan">Todo en un solo lugar<br> <span class="type"></span></h1>
                </div>
                <div class="col-md-4 hidden-sm hidden-xs">
                    <img class="intro-screen wow bounceInUp" data-wow-delay="0.5s" src="web/images/intro_screen.png" height="773" width="400" alt="" />
                </div>
            </div>
        </div>
        <div class="block-bg" data-stellar-ratio="0.4"></div>
    </header>
    <!-- INTRO END --> 
    
    @RenderBody()
    
    <!-- DOWNLOAD BEGIN -->
    <section id="download" class="bg-color-main">
        <div class="container-fluid wow fadeInDown">
            <a href="#wrap" class="goto">
                <h2>Descargar App</h2>
            </a>
        </div>
        <div class="block-bg" data-stellar-ratio="0.5"></div>
    </section>
    
    <!-- DOWNLOAD END -->
    
    <!-- FOOTER BEGIN -->
    <footer id="footer">
        <div class="container"> 
            <img class="logo" src="web/images/logo.png" alt="PriHood Logo" height="48" />
            <p class="copyright">&copy; 2017 PriHood</p>
        </div>
    </footer>
    <!-- FOOTER END --> 
</div>

<script src="~/web/scripts/jquery-1.8.2.min.js"></script> 
<script src="~/web/scripts/bootstrap.min.js"></script> 
<script src="~/web/scripts/owl.carousel.min.js"></script> 
<script src="~/web/scripts/jquery.validate.min.js"></script> 
<script src="~/web/scripts/wow.min.js"></script> 
<script src="~/web/scripts/jquery.smooth-scroll.min.js"></script> 
<script src="~/web/scripts/jquery.superslides.min.js"></script>
<script src="~/web/scripts/placeholders.jquery.min.js"></script>
<script src="~/web/scripts/jquery.magnific-popup.min.js"></script>
<script src="~/web/scripts/jquery.stellar.min.js"></script>
<script src="~/web/scripts/retina.min.js"></script>
<script src="~/web/scripts/site.min.js" asp-append-version="true"></script>

@RenderSection("Scripts", required: false)
</body>
</html>
